generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id          String   @id @default(cuid())
  title       String
  imageUrl    String
  price       Float    @default(0)
  status      String   @default("AVAILABLE") // AVAILABLE, RESERVED, TAKEN
  renterName  String?
  renterPhone String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BotSession {
  id        String   @id @default(cuid())
  chatId    BigInt   @unique
  step      String   @default("IDLE") // IDLE, AWAITING_TITLE, AWAITING_PRICE
  tempData  Json?    // Stores photoUrl, partial title, etc.
  updatedAt DateTime @updatedAt
}
